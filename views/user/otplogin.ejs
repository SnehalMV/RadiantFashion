<div class="container">
  <div class="form-box" style="box-shadow: none; max-width: none;">
    <div class="form-tab">
      <ul class="nav nav-pills nav-fill" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="signin-tab" data-toggle="tab" href="#signin" role="tab" aria-controls="signin"
            aria-selected="true">Sign In Using OTP</a>
        </li>
      </ul>
      <div class="tab-content" id="tab-content-5">
        <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
          <form action="/otplogin" method="post">
            <div class="form-wrapper">
              <label for="">Phone Number:</label>
              <div class="form-holder">
                <input type="text" class="form-control" name="number" id="number" onkeyup="return numberValidate()">
                <span id="number-error" class="text-danger">
                  <%= locals.invalid %>
                </span>
              </div>

              <div class="form-footer">

                <button type="submit" class="btn btn-outline-primary">
                  <span>Send OTP</span>
                  <i class="icon-long-arrow-right"></i>
                </button>



              </div><!-- End .form-footer -->


          </form>



        </div><!-- .End .tab-pane -->

      </div><!-- End .tab-content -->
    </div><!-- End .form-tab -->
  </div><!-- End .form-box -->
</div>
<script>
  function numberValidate(){
        const regNumber = /[1-9]{1}\d{9}/$


        const number = document.getElementById('number').value;
        if(!regNumber.test(number)){
            document.getElementById('number-error').innerHTML = 'Enter Valid 10-digit Number'
            return false;
        }else{
            document.getElementById('number-error').innerHTML = ''
            return true;
        }
    }
</script>
