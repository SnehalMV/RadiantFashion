</html>
<script>
	function addToCart (prodId) {
  $.ajax({
    url: '/add-to-cart/' + prodId,
    method: 'get',
    success: (response) => {
      if (response.status) {
        $('#cartCount').html(response.cartCount)
				toastr.success('Product added to Cart')
      }
    }
  })
}
toastr.options = {
  debug: false,
  newestOnTop: false,
  positionClass: 'toast-top-right',
  preventDuplicates: false,
  onclick: null,
  showDuration: '300',
  hideDuration: '1000',
  timeOut: '2000',
  extendedTimeOut: '1000',
  showEasing: 'swing',
  hideEasing: 'swing',
  showMethod: 'fadeIn',
  hideMethod: 'fadeOut'
}
</script>
